---
import Layout from "../../layouts/Layout.astro"
---

<Layout title="Espace Admin">
    <main class="w-screen h-screen flex  justify-center items-center bg-linear-to-br from-slate-400 to-slate-600">
        <div class="flex flex-col justify-center items-center rounded-lg space-y-2 bg-neutral-200 p-3">
            <h2 class="text-center text-green-700 font-semibold text-2xl">Administration</h2>
            <form class="flex flex-col space-y-2" action="admin/post" method="post">
                <input class="bg-white border-2 border-solid border-black placeholder:text-center p-2 rounded-md" type="email" placeholder="email" name="email">
                <input class="bg-white border-2 border-solid border-black placeholder:text-center p-2 rounded-md" type="password" placeholder="password" name="password">
                <input class="placeholder:text-center p-2 rounded-md bg-black text-white" type="submit">
            </form>
        </div>
    </main>
</Layout>
