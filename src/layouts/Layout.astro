---
import "../styles/global.css";
import { getSession } from "../db/session.js";
import Menu from "../componants/svelte/Menu.svelte"

interface Props{
	title: string;
}

const {title} = Astro.props
const info = Astro.cookies.get("connect.sid")?.value;
const json = await getSession(info)
const role = json.hasOwnProperty("role") ? json.role : "guest"

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<slot name="head" />
		<title>{title}</title>
	</head>
	<body>
		<header
			class="flex justify-between item-center w-full p-2 bg-black text-white"
		>
			<a href="/"><h1 class="text-2xl">Igor Service</h1></a>
			<nav>
				<ul class="flex space-x-2">
					<a href="/Map"><li>Map</li></a>
					<a href="/signIn"><li>Inscription</li></a>
					<a href="/login"><li>Connection</li></a>
				</ul>
			</nav>
		</header>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
